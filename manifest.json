{
  "manifest_version": 3,
  "name": "TweetMore",
  "description": "Tweets and replies tracker to motivate you to engage more",
  "version": "0.0.5",
  "permissions": ["storage"],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["Ding.mp3"],
      "matches": ["https://twitter.com/*"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*"],
      "runAt": "document_end",
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}
